---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { name: 'Home', href: '/' },
  { name: 'Services', href: '/services' },
  { name: 'About Us', href: '/about' },
  { name: 'Contact', href: '/contact' },
];

const services = [
  { name: 'General Dentistry', href: '/services#general' },
  { name: 'Cosmetic Dentistry', href: '/services#cosmetic' },
  { name: 'Teeth Whitening', href: '/services#whitening' },
  { name: 'Dental Implants', href: '/services#implants' },
];
---

<footer class="footer">
  <div class="footer-wave">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V0H1380C1320 0 1200 0 1080 0C960 0 840 0 720 0C600 0 480 0 360 0C240 0 120 0 60 0H0V120Z" fill="currentColor"/>
    </svg>
  </div>
  
  <div class="footer-content">
    <div class="container">
      <div class="footer-grid">
        <!-- Brand Column -->
        <div class="footer-brand">
          <a href="/" class="footer-logo">
            <img src="/images/logo.png" alt="Smile Up Clinic" />
            <span>
              <strong>SMILE UP</strong>
              <small>CLINIC</small>
            </span>
          </a>
          <p>Your trusted partner for comprehensive dental care. We're committed to helping you achieve a healthy, beautiful smile.</p>
          <div class="social-links">
            <a href="#" aria-label="Facebook" class="social-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
              </svg>
            </a>
            <a href="#" aria-label="Instagram" class="social-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
              </svg>
            </a>
            <a href="#" aria-label="Twitter" class="social-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Quick Links -->
        <div class="footer-links">
          <h4>Quick Links</h4>
          <ul>
            {quickLinks.map((link) => (
              <li><a href={link.href}>{link.name}</a></li>
            ))}
          </ul>
        </div>
        
        <!-- Services -->
        <div class="footer-links">
          <h4>Our Services</h4>
          <ul>
            {services.map((service) => (
              <li><a href={service.href}>{service.name}</a></li>
            ))}
          </ul>
        </div>
        
        <!-- Contact Info -->
        <div class="footer-contact">
          <h4>Contact Us</h4>
          <ul>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/>
              </svg>
              <span>123 Dental Street, Health City, HC 12345</span>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
              <span>(555) 123-4567</span>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/>
              </svg>
              <span>hello@smileupclinic.com</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  
  <div class="footer-bottom">
    <div class="container">
      <p>&copy; {currentYear} Smile Up Clinic. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-secondary);
    color: var(--color-white);
    margin-top: auto;
  }
  
  .footer-wave {
    color: var(--color-white);
    margin-bottom: -1px;
  }
  
  .footer-wave svg {
    display: block;
    width: 100%;
    height: auto;
  }
  
  .footer-content {
    padding: var(--space-3xl) 0;
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1.5fr;
    gap: var(--space-3xl);
  }
  
  .footer-brand p {
    color: var(--color-gray-300);
    margin: var(--space-lg) 0;
    font-size: 0.95rem;
    line-height: 1.7;
  }
  
  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }
  
  .footer-logo img {
    width: 45px;
    filter: brightness(0) invert(1);
  }
  
  .footer-logo span {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }
  
  .footer-logo strong {
    font-size: 1.1rem;
    letter-spacing: 0.5px;
  }
  
  .footer-logo small {
    font-size: 0.7rem;
    letter-spacing: 2px;
    opacity: 0.7;
  }
  
  .social-links {
    display: flex;
    gap: var(--space-md);
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
    transition: all var(--transition-normal);
  }
  
  .social-link:hover {
    background: var(--color-primary);
    transform: translateY(-3px);
  }
  
  .footer-links h4,
  .footer-contact h4 {
    font-size: 1.1rem;
    margin-bottom: var(--space-lg);
    color: var(--color-white);
  }
  
  .footer-links ul,
  .footer-contact ul {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
  
  .footer-links a {
    color: var(--color-gray-300);
    transition: color var(--transition-fast);
    font-size: 0.95rem;
  }
  
  .footer-links a:hover {
    color: var(--color-primary-light);
  }
  
  .footer-contact li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
    color: var(--color-gray-300);
    font-size: 0.95rem;
  }
  
  .footer-contact svg {
    flex-shrink: 0;
    margin-top: 2px;
    color: var(--color-primary-light);
  }
  
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--space-lg) 0;
  }
  
  .footer-bottom p {
    text-align: center;
    color: var(--color-gray-400);
    font-size: 0.9rem;
    margin: 0;
  }
  
  @media (max-width: 900px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-2xl);
    }
  }
  
  @media (max-width: 600px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
      text-align: center;
    }
    
    .footer-logo {
      justify-content: center;
    }
    
    .social-links {
      justify-content: center;
    }
    
    .footer-contact li {
      justify-content: center;
    }
  }
</style>
